{
  "ApplicationName": "TalonIntegrationAPI",
  "PackageStructure": "com.talonone.integrationapi",
  "Dependencies": [
    "Spring Web",
    "Spring Data JPA",
    "H2 Database",
    "Spring Security",
    "springdoc-openapi-ui"
  ],
  "RestEndpoints": [
    {"Method": "PUT", "Path": "/v2/customer_sessions/{customerSessionId}", "Description": "Update or create a customer session and evaluate promotion rules."},
    {"Method": "GET", "Path": "/v2/customer_sessions/{customerSessionId}", "Description": "Get the details of the given customer session."},
    {"Method": "POST", "Path": "/v2/customer_sessions/{customerSessionId}/returns", "Description": "Create a new return request for the specified cart items."},
    {"Method": "PUT", "Path": "/v2/customer_sessions/{customerSessionId}/reopen", "Description": "Reopen a closed customer session."},
    {"Method": "PUT", "Path": "/v2/customer_profiles/{integrationId}", "Description": "Update or create a Customer Profile."},
    {"Method": "PUT", "Path": "/v2/customer_profiles", "Description": "Update (or create) up to 1000 customer profiles in 1 request."},
    {"Method": "POST", "Path": "/v2/audiences", "Description": "Create audience."},
    {"Method": "DELETE", "Path": "/v2/audiences/{audienceId}", "Description": "Delete audience."},
    {"Method": "PUT", "Path": "/v2/audiences/{audienceId}", "Description": "Update audience name."},
    {"Method": "DELETE", "Path": "/v2/audiences/{audienceId}/memberships", "Description": "Remove all members from this audience."},
    {"Method": "POST", "Path": "/v2/customer_audiences", "Description": "Add or remove customer profiles from an audience."},
    {"Method": "PUT", "Path": "/v2/audience_customers/{audienceId}/attributes", "Description": "Update profile attributes for all customers in audience."},
    {"Method": "POST", "Path": "/v2/loyalty_programs/{loyaltyProgramId}/cards/{loyaltyCardId}/link_profile", "Description": "Link customer profile to card."},
    {"Method": "POST", "Path": "/v2/events", "Description": "Trigger a custom event."}
  ],
  "DatabaseConfigurations": {
    "DatabaseType": "H2",
    "URL": "jdbc:h2:mem:talon;DB_CLOSE_DELAY=-1",
    "Username": "sa",
    "Password": ""
  },
  "SecurityFeatures": {
    "Authentication": "API Key (Authorization header, ApiKey-v1)",
    "Authorization": "Endpoint-level security via Spring Security"
  }
}
