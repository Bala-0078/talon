{
  "ApplicationName": "TalonIntegrationApi",
  "PackageStructure": "com.talon.integration",
  "Dependencies": [
    "Spring Web",
    "Spring Security",
    "Springdoc OpenAPI",
    "Jackson Databind",
    "Lombok"
  ],
  "RestEndpoints": [
    { "Method": "PUT", "Path": "/api/customer-sessions/{customerSessionId}", "Description": "Update or create a customer session" },
    { "Method": "GET", "Path": "/api/customer-sessions/{customerSessionId}", "Description": "Get customer session details" },
    { "Method": "POST", "Path": "/api/customer-sessions/{customerSessionId}/returns", "Description": "Return cart items for a session" },
    { "Method": "PUT", "Path": "/api/customer-sessions/{customerSessionId}/reopen", "Description": "Reopen a closed customer session" },
    { "Method": "PUT", "Path": "/api/customer-profiles/{integrationId}", "Description": "Update or create a customer profile" },
    { "Method": "GET", "Path": "/api/customer-profiles/{integrationId}/inventory", "Description": "Get customer inventory (coupons, referrals, loyalty, etc.)" },
    { "Method": "GET", "Path": "/api/loyalty-programs/{loyaltyProgramId}/profile/{integrationId}/points", "Description": "List customer's unused loyalty points" },
    { "Method": "POST", "Path": "/api/coupon-reservations/{couponValue}", "Description": "Create coupon reservation for customer profiles" }
  ],
  "DatabaseConfigurations": {
    "DatabaseType": "None",
    "URL": "",
    "Username": "",
    "Password": ""
  },
  "SecurityFeatures": {
    "Authentication": "API Key in Authorization header",
    "Authorization": "All endpoints require valid API Key"
  }
}
